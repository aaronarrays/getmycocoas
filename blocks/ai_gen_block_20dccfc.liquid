{% doc %}
  @prompt
    crea un banner hero que tenga la capcidad de poner una imagen para desktop y otra para mobile y que tambien se le pueda poner un link que permita que cuando toquen la imagen, lo lleve a ese link.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    display: block;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-hero-banner-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .ai-hero-banner-{{ ai_gen_id }}:hover .ai-hero-banner-image-{{ ai_gen_id }} {
    {% if block.settings.hover_effect == 'zoom' %}
      transform: scale(1.05);
    {% elsif block.settings.hover_effect == 'fade' %}
      opacity: 0.9;
    {% endif %}
  }

  .ai-hero-banner-mobile-image-{{ ai_gen_id }} {
    display: none;
  }

  .ai-hero-banner-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;}

  .ai-hero-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 300px;
    color: #cccccc;
  }

  .ai-hero-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      {{ block.settings.overlay_direction }},
      rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }}) 0%,
      transparent 100%
    );
    pointer-events: none;
  }

  .ai-hero-banner-content-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: {{ block.settings.text_color }};
    z-index: 2;
    width: 90%;
    max-width: 600px;
    pointer-events: none;
  }

  .ai-hero-banner-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: bold;
    margin: 0 0 16px 0;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .ai-hero-banner-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    margin: 0;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
  }

  @media screen and (max-width: 749px) {
    .ai-hero-banner-image-{{ ai_gen_id }} {
      display: none;
    }

    .ai-hero-banner-mobile-image-{{ ai_gen_id }} {
      display: block;
      width: 100%;
      height: {{ block.settings.mobile_height }}px;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .ai-hero-banner-{{ ai_gen_id }}:hover .ai-hero-banner-mobile-image-{{ ai_gen_id }} {
      {% if block.settings.hover_effect == 'zoom' %}
        transform: scale(1.05);
      {% elsif block.settings.hover_effect == 'fade' %}
        opacity: 0.9;
      {% endif %}
    }

    .ai-hero-banner-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }

    .ai-hero-banner-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-hero-banner-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

{% if block.settings.banner_link != blank %}
  <a href="{{ block.settings.banner_link }}" class="ai-hero-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
{% else %}
  <div class="ai-hero-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
{% endif %}

  {% if block.settings.desktop_image or block.settings.mobile_image %}
    {% if block.settings.desktop_image %}
      <img
        src="{{ block.settings.desktop_image | image_url: width: 2000 }}"
        alt="{{ block.settings.desktop_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.desktop_image.width }}"
        height="{{ block.settings.desktop_image.height }}"
        class="ai-hero-banner-image-{{ ai_gen_id }}"
      >
    {% endif %}

    {% if block.settings.mobile_image %}
      <img
        src="{{ block.settings.mobile_image | image_url: width: 1000 }}"
        alt="{{ block.settings.mobile_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.mobile_image.width }}"
        height="{{ block.settings.mobile_image.height }}"
        class="ai-hero-banner-mobile-image-{{ ai_gen_id }}"
      >
    {% endif %}
  {% else %}
    <div class="ai-hero-banner-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
    </div>
  {% endif %}

  {% if block.settings.show_overlay %}
    <div class="ai-hero-banner-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  {% if block.settings.title != blank or block.settings.subtitle != blank %}
    <div class="ai-hero-banner-content-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-hero-banner-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <p class="ai-hero-banner-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
      {% endif %}
    </div>
  {% endif %}

{% if block.settings.banner_link != blank %}
  </a>
{% else %}
  </div>
{% endif %}

{% schema %}
{
  "name": "Banner Hero",
  "settings": [
    {
      "type": "header",
      "content": "Imágenes"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Imagen para escritorio"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Imagen para móvil"
    },
    {
      "type": "url",
      "id": "banner_link",
      "label": "Enlace del banner"
    },
    {
      "type": "header",
      "content": "Dimensiones"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Altura en escritorio",
      "default": 500
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 150,
      "max": 600,
      "step": 25,
      "unit": "px",
      "label": "Altura en móvil",
      "default": 300
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Radio del borde",
      "default": 0
    },
    {
      "type": "header",
      "content": "Contenido de texto"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Tu título aquí"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Tu subtítulo aquí"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 20,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Tamaño del título",
      "default": 48
    },
    {
      "type": "range",
      "id": "subtitle_size",
      "min": 12,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Tamaño del subtítulo",
      "default": 18
    },
    {
      "type": "header",
      "content": "Efectos"
    },
    {
      "type": "select",
      "id": "hover_effect",
      "label": "Efecto al pasar el cursor",
      "options": [
        {
          "value": "none",
          "label": "Ninguno"
        },
        {
          "value": "zoom",
          "label": "Zoom"
        },
        {
          "value": "fade",
          "label": "Desvanecer"
        }
      ],
      "default": "zoom"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Mostrar superposición",
      "default": true
    },
    {
      "type": "select",
      "id": "overlay_direction",
      "label": "Dirección de la superposición",
      "options": [
        {
          "value": "to bottom",
          "label": "De arriba a abajo"
        },
        {
          "value": "to top",
          "label": "De abajo a arriba"
        },
        {
          "value": "to right",
          "label": "De izquierda a derecha"
        },
        {
          "value": "to left",
          "label": "De derecha a izquierda"
        }
      ],
      "default": "to bottom"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "label": "Opacidad de la superposición",
      "default": 30
    }
  ],
  "presets": [
    {
      "name": "Banner Hero"
    }
  ]
}
{% endschema %}