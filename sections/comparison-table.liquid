{% schema %}
{
  "name": "Comparison Table",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "¿Cuál es ideal para ti?"
    },
    {
  "type": "range",
  "id": "max_width",
  "label": "Ancho máximo",
  "min": 600,
  "max": 1400,
  "step": 20,
  "default": 1000
},
{
  "type": "range",
  "id": "icon_size",
  "label": "Tamaño iconos",
  "min": 12,
  "max": 30,
  "step": 1,
  "default": 18
},
{
  "type": "color",
  "id": "cross_color",
  "label": "Color X",
  "default": "#999999"
},
{
  "type": "color",
  "id": "row_alt_bg",
  "label": "Color fila alterna",
  "default": "#f7f7f7"
},

    {
      "type": "image_picker",
      "id": "product_1_image",
      "label": "Imagen Producto 1"
    },
    {
      "type": "text",
      "id": "product_1_name",
      "label": "Nombre Producto 1",
      "default": "Producto 1"
    },

    {
      "type": "image_picker",
      "id": "product_2_image",
      "label": "Imagen Producto 2"
    },
    {
      "type": "text",
      "id": "product_2_name",
      "label": "Nombre Producto 2",
      "default": "Producto 2"
    },

    {
      "type": "header",
      "content": "Tipografía"
    },
    {
      "type": "range",
      "id": "title_size_desktop",
      "label": "Tamaño título desktop",
      "min": 16,
      "max": 48,
      "step": 1,
      "default": 28
    },
    {
      "type": "range",
      "id": "title_size_mobile",
      "label": "Tamaño título mobile",
      "min": 14,
      "max": 32,
      "step": 1,
      "default": 22
    },

    {
      "type": "range",
      "id": "text_size_desktop",
      "label": "Texto desktop",
      "min": 12,
      "max": 22,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "text_size_mobile",
      "label": "Texto mobile",
      "min": 10,
      "max": 18,
      "step": 1,
      "default": 14
    },

    {
      "type": "header",
      "content": "Colores"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color texto",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "check_color",
      "label": "Color check",
      "default": "#1a73e8"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Color líneas",
      "default": "#eeeeee"
    },

    {
      "type": "header",
      "content": "Espaciado"
    },
    {
      "type": "range",
      "id": "row_padding",
      "label": "Padding filas",
      "min": 8,
      "max": 30,
      "step": 2,
      "default": 14
    },
    {
  "type": "range",
  "id": "padding_top",
  "label": "Padding superior",
  "min": 0,
  "max": 100,
  "step": 4,
  "default": 40
},
{
  "type": "range",
  "id": "padding_bottom",
  "label": "Padding inferior",
  "min": 0,
  "max": 100,
  "step": 4,
  "default": 40
}
  ],

  "blocks": [
    {
      "type": "row",
      "name": "Fila",
      "settings": [
        {
          "type": "text",
          "id": "feature",
          "label": "Característica",
          "default": "Característica"
        },
        {
          "type": "checkbox",
          "id": "col1",
          "label": "Producto 1",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "col2",
          "label": "Producto 2",
          "default": false
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Comparison Table"
    }
  ]
}
{% endschema %}

<div class="comparison-table-{{ section.id }}">

<h2 class="title-mobile">{{ section.settings.title }}</h2>

<div class="comparison-header">
  <h2 class="title-desktop">{{ section.settings.title }}</h2>

  <div class="products">
      <div class="product">
        {% if section.settings.product_1_image %}
          <img src="{{ section.settings.product_1_image | image_url: width: 200 }}" alt="">
        {% endif %}
        <p>{{ section.settings.product_1_name }}</p>
      </div>

      <div class="product">
        {% if section.settings.product_2_image %}
          <img src="{{ section.settings.product_2_image | image_url: width: 200 }}" alt="">
        {% endif %}
        <p>{{ section.settings.product_2_name }}</p>
      </div>
    </div>
  </div>

  <div class="comparison-body">
    {% for block in section.blocks %}
      <div class="row">
        <div class="feature">{{ block.settings.feature }}</div>

        <div class="value">
          {% if block.settings.col1 %}
  <span class="check">✓</span>
{% else %}
  <span class="cross">✕</span>
{% endif %}
        </div>

        <div class="value">
          {% if block.settings.col2 %}
  <span class="check">✓</span>
{% else %}
  <span class="cross">✕</span>
{% endif %}
        </div>
      </div>
    {% endfor %}
  </div>

</div>

<style>
.comparison-table-{{ section.id }} {
  max-width: {{ section.settings.max_width }}px;
  margin: 0 auto;
  color: {{ section.settings.text_color }};
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
}

.comparison-header {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  align-items: center;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
}

.comparison-header h2 {
  font-size: {{ section.settings.title_size_desktop }}px;
}

.products {
  display: flex;
  gap: 40px;
}

.product {
  text-align: center;
}

.product img {
  width: 80px;
  margin-left: auto;
  margin-right: auto;
}

.product p {
  margin-top: 8px;
  font-size: {{ section.settings.text_size_desktop }}px;
  font-weight: 600;
}

.comparison-body {
  border-top: 1px solid {{ section.settings.border_color }};
}

.row {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  padding: {{ section.settings.row_padding }}px 0;
  border-bottom: 1px solid {{ section.settings.border_color }};
  align-items: center;
  padding-left: 10px;
  padding-right: 10px;
}

.feature {
  font-size: {{ section.settings.text_size_desktop }}px;
}

.value {
  text-align: center;
  font-size: 18px;
  color: {{ section.settings.check_color }};
}

@media (max-width: 768px) {

  .comparison-table-{{ section.id }} {
    max-width: 100%;
    margin: auto 15px;
  }

  .comparison-header {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    align-items: center;
    text-align: center;
  }

  .comparison-header h2 {
    grid-column: 1 / -1;
    font-size: {{ section.settings.title_size_mobile }}px;
    margin-bottom: 20px;
  }

  /* CLAVE: eliminar conflicto */
  .products {
    display: contents;
  }

  /* FORZAR COLUMNAS CORRECTAS */
  .comparison-header .product:nth-child(1) {
    grid-column: 2;
  }

  .comparison-header .product:nth-child(2) {
    grid-column: 3;
  }

  .product {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .product img {
    display: block;
    margin: 0 auto;
    width: 60px;
  }

  .product p {
    font-size: {{ section.settings.text_size_mobile }}px;
  }

  .feature {
    font-size: {{ section.settings.text_size_mobile }}px;
  }

  .row {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    column-gap: 0;
  }

}
.check {
  color: {{ section.settings.check_color }};
  font-size: {{ section.settings.icon_size }}px;
}

.cross {
  color: {{ section.settings.cross_color }};
  font-size: {{ section.settings.icon_size }}px;
}
.comparison-header h2 {
  grid-column: 1 / 2;
}

.products {
  display: contents;
}
/* FILAS INTERCALADAS */
.row:nth-child(even) {
  background-color: {{ section.settings.row_alt_bg }};
}

/* CONTROL DE TÍTULOS */
.title-mobile {
  display: none;
}

.title-desktop {
  display: block;
}

/* MOBILE */
@media (max-width: 768px) {

  .title-desktop {
    display: none;
  }

  .title-mobile {
    display: block;
    text-align: center;
    font-size: {{ section.settings.title_size_mobile }}px;
    margin-bottom: 20px;
  }

}
</style>