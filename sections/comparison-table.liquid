{% schema %}
{
  "name": "Comparison Table",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "¿Cuál es ideal para ti?"
    },
    {
  "type": "range",
  "id": "max_width",
  "label": "Ancho máximo",
  "min": 600,
  "max": 1400,
  "step": 20,
  "default": 1000
},
{
  "type": "range",
  "id": "icon_size",
  "label": "Tamaño iconos",
  "min": 12,
  "max": 30,
  "step": 1,
  "default": 18
},
{
  "type": "color",
  "id": "cross_color",
  "label": "Color X",
  "default": "#999999"
},

    {
      "type": "image_picker",
      "id": "product_1_image",
      "label": "Imagen Producto 1"
    },
    {
      "type": "text",
      "id": "product_1_name",
      "label": "Nombre Producto 1",
      "default": "Producto 1"
    },

    {
      "type": "image_picker",
      "id": "product_2_image",
      "label": "Imagen Producto 2"
    },
    {
      "type": "text",
      "id": "product_2_name",
      "label": "Nombre Producto 2",
      "default": "Producto 2"
    },

    {
      "type": "header",
      "content": "Tipografía"
    },
    {
      "type": "range",
      "id": "title_size_desktop",
      "label": "Tamaño título desktop",
      "min": 16,
      "max": 48,
      "step": 1,
      "default": 28
    },
    {
      "type": "range",
      "id": "title_size_mobile",
      "label": "Tamaño título mobile",
      "min": 14,
      "max": 32,
      "step": 1,
      "default": 22
    },

    {
      "type": "range",
      "id": "text_size_desktop",
      "label": "Texto desktop",
      "min": 12,
      "max": 22,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "text_size_mobile",
      "label": "Texto mobile",
      "min": 10,
      "max": 18,
      "step": 1,
      "default": 14
    },

    {
      "type": "header",
      "content": "Colores"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color texto",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "check_color",
      "label": "Color check",
      "default": "#1a73e8"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Color líneas",
      "default": "#eeeeee"
    },

    {
      "type": "header",
      "content": "Espaciado"
    },
    {
      "type": "range",
      "id": "row_padding",
      "label": "Padding filas",
      "min": 8,
      "max": 30,
      "step": 2,
      "default": 14
    }
  ],

  "blocks": [
    {
      "type": "row",
      "name": "Fila",
      "settings": [
        {
          "type": "text",
          "id": "feature",
          "label": "Característica",
          "default": "Característica"
        },
        {
          "type": "checkbox",
          "id": "col1",
          "label": "Producto 1",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "col2",
          "label": "Producto 2",
          "default": false
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Comparison Table"
    }
  ]
}
{% endschema %}

<div class="comparison-table-{{ section.id }}">

  <div class="comparison-header">
    <h2>{{ section.settings.title }}</h2>

    <div class="products">
      <div class="product">
        {% if section.settings.product_1_image %}
          <img src="{{ section.settings.product_1_image | image_url: width: 200 }}" alt="">
        {% endif %}
        <p>{{ section.settings.product_1_name }}</p>
      </div>

      <div class="product">
        {% if section.settings.product_2_image %}
          <img src="{{ section.settings.product_2_image | image_url: width: 200 }}" alt="">
        {% endif %}
        <p>{{ section.settings.product_2_name }}</p>
      </div>
    </div>
  </div>

  <div class="comparison-body">
    {% for block in section.blocks %}
      <div class="row">
        <div class="feature">{{ block.settings.feature }}</div>

        <div class="value">
          {% if block.settings.col1 %}
  <span class="check">✓</span>
{% else %}
  <span class="cross">✕</span>
{% endif %}
        </div>

        <div class="value">
          {% if block.settings.col2 %}
            ✓
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>

</div>

<style>
.comparison-table-{{ section.id }} {
  max-width: {{ section.settings.max_width }}px;
  margin: 0 auto;
  color: {{ section.settings.text_color }};
}

.comparison-header {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  align-items: center;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
}

.comparison-header h2 {
  font-size: {{ section.settings.title_size_desktop }}px;
}

.products {
  display: flex;
  gap: 40px;
}

.product {
  text-align: center;
}

.product img {
  width: 80px;
}

.product p {
  margin-top: 8px;
  font-size: {{ section.settings.text_size_desktop }}px;
  font-weight: 600;
}

.comparison-body {
  border-top: 1px solid {{ section.settings.border_color }};
}

.row {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  padding: {{ section.settings.row_padding }}px 0;
  border-bottom: 1px solid {{ section.settings.border_color }};
  align-items: center;
}

.feature {
  font-size: {{ section.settings.text_size_desktop }}px;
}

.value {
  text-align: center;
  font-size: 18px;
  color: {{ section.settings.check_color }};
}

/* MOBILE */
@media (max-width: 768px) {

  .comparison-header {
    flex-direction: column;
    gap: 20px;
  }

  .comparison-header h2 {
    font-size: {{ section.settings.title_size_mobile }}px;
    text-align: center;
  }

  .product p {
    font-size: {{ section.settings.text_size_mobile }}px;
  }

  .feature {
    font-size: {{ section.settings.text_size_mobile }}px;
  }

  .row {
    grid-template-columns: 1fr 1fr 1fr;
  }
}
.check {
  color: {{ section.settings.check_color }};
  font-size: {{ section.settings.icon_size }}px;
}

.cross {
  color: {{ section.settings.cross_color }};
  font-size: {{ section.settings.icon_size }}px;
}
.comparison-header h2 {
  grid-column: 1 / 2;
}

.products {
  display: contents;
}
</style>