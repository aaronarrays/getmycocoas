{% comment %}
  Sección: Carrusel de Logos Infinito
  Autor: Personalizable con Schema
  Descripción: Marquesina infinita de logos con título y velocidad ajustables
{% endcomment %}

<style>
  #shopify-section-{{ section.id }} {
    --carousel-speed: {{ section.settings.carousel_speed }}s;
  }
  
  #shopify-section-{{ section.id }} .logo-carousel-container {
    font-family: {{ section.settings.font_family }}, sans-serif;
    color: {{ section.settings.text_color }};
    margin: 0;
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px 0;
    background-color: {{ section.settings.background_color }};
    overflow-x: hidden;
  }
  
  #shopify-section-{{ section.id }} .section-title {
    text-align: center;
    font-family: {{ section.settings.font_family }}, sans-serif;
    font-weight: {{ section.settings.title_font_weight }};
    color: {{ section.settings.title_color }};
    margin-bottom: 20px;
    padding: 10px;
    {% if section.settings.title_uppercase %}
    text-transform: uppercase;
    {% endif %}
    letter-spacing: {{ section.settings.title_letter_spacing }}px;
  }
  
  @media (min-width: 769px) {
    #shopify-section-{{ section.id }} .section-title {
      font-size: {{ section.settings.title_size_desktop }}px;
      padding-bottom: {{ section.settings.title_margin_bottom_desktop }}px;
    }
  }
  
  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} .section-title {
      font-size: {{ section.settings.title_size_mobile }}px;
      padding-bottom: {{ section.settings.title_margin_bottom_mobile }}px;
    }
  }
  
  #shopify-section-{{ section.id }} .marquee-container {
    position: relative;
    background-color: {{ section.settings.marquee_background }};
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: hidden;
    width: 100%;
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
  }
  
  #shopify-section-{{ section.id }} .marquee-wrapper {
    display: flex;
    align-items: center;
    width: max-content;
    animation: marquee var(--carousel-speed) linear infinite;
    {% if section.settings.pause_on_hover %}
    animation-play-state: running;
    {% endif %}
  }
  
  {% if section.settings.pause_on_hover %}
  #shopify-section-{{ section.id }} .marquee-wrapper:hover {
    animation-play-state: paused;
  }
  {% endif %}
  
  #shopify-section-{{ section.id }} .marquee-wrapper img {
    height: auto;
    object-fit: {{ section.settings.image_fit }};
    border-radius: {{ section.settings.image_border_radius }}px;
    display: block;
    filter: {{ section.settings.image_filter }};
    transition: all 0.3s ease;
  }
  
  {% if section.settings.hover_effect %}
  #shopify-section-{{ section.id }} .marquee-wrapper img:hover {
    transform: scale({{ section.settings.hover_scale }});
    filter: none;
  }
  {% endif %}
  
  @keyframes marquee {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }
  
  @media (min-width: 769px) {
    #shopify-section-{{ section.id }} .marquee-wrapper {
      gap: {{ section.settings.logo_gap_desktop }}px;
    }
    #shopify-section-{{ section.id }} .marquee-wrapper img {
      width: {{ section.settings.logo_width_desktop }}px;
      max-width: {{ section.settings.logo_max_width_desktop }}px;
    }
  }
  
  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} .marquee-wrapper {
      gap: {{ section.settings.logo_gap_mobile }}px;
    }
    #shopify-section-{{ section.id }} .marquee-wrapper img {
      width: {{ section.settings.logo_width_mobile }}px;
      max-width: {{ section.settings.logo_max_width_mobile }}px;
    }
  }
</style>

<div class="logo-carousel-container">
  {% if section.settings.show_title and section.settings.section_title != blank %}
    <h2 class="section-title">{{ section.settings.section_title }}</h2>
  {% endif %}
  
  <div class="marquee-container">
    <div class="marquee-wrapper" id="marquee-{{ section.id }}">
      <!-- Los logos se insertarán aquí via JavaScript -->
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const wrapper = document.getElementById('marquee-{{ section.id }}');
    const logos = [
      {% for block in section.blocks %}
        {% if block.settings.logo != blank %}
          {
            url: "{{ block.settings.logo | image_url: width: 400 }}",
            alt: "{{ block.settings.logo_alt | default: 'Logo' }}",
            link: "{{ block.settings.logo_link }}"
          }{% unless forloop.last %},{% endunless %}
        {% endif %}
      {% endfor %}
    ];
    
    const repetitions = {{ section.settings.logo_repetitions }};
    
    // Crear los logos repetidas veces para efecto infinito
    for (let i = 0; i < repetitions; i++) {
      logos.forEach(logo => {
        const container = logo.link ? document.createElement('a') : document.createElement('span');
        const imageElement = document.createElement('img');
        
        if (logo.link) {
          container.href = logo.link;
          container.target = '_blank';
          container.rel = 'noopener noreferrer';
        }
        
        imageElement.src = logo.url;
        imageElement.alt = logo.alt;
        imageElement.loading = 'lazy';
        
        container.appendChild(imageElement);
        wrapper.appendChild(container);
      });
    }
  });
</script>

